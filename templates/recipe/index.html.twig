{% extends "layout.html.twig" %}

{% block content %}
    <div class="starter-template">
        <h1>{{ recipe.title }}</h1>
    </div>
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <img src="{{ asset('photo/' ~ recipe.picture_recipe) }}" class="img-responsive img-thumbnail"
                         width="500px">
                        <p>Moyenne de la recette :<span id="avg">{{ ratings|number_format(2,',', ' ') }}</span>/5 pour
                        <span id="voters">({{ voters }})</span> participations</p>
                </div>
                <div class="panel-body">
                    <div class="col-md-6">
                        <p>Temps de préparation: {{ recipe.prep_time }}</p>
                        <p>Temps de cuisson: {{ recipe.cook_time }}</p>
                        <p>Nombre de personnes: {{ recipe.portion }}</p>
                        <p>Difficulté: {{ recipe.difficulty }}</p>
                    </div>
                    <div class="col-md-6">
                        <p>Ingrédients de la recette: {{ recipe.ingredients|nl2br }}</p>
                        <p>Etapes de la recette: {{ recipe.methods|nl2br  }}</p>
                    </div>
                    <div class="col-md-12">
                        <p>Anecdote: {{ recipe.story }}</p>
                    </div>
                    <div class="col-md-12">
                        <p>Auteur: <a
                                    href="{{ path('user_profil_public',{id_user:recipe.id_user}) }}">{{ user.username }}</a>
                        </p>
                    </div>

                    <!-- Fromulaire du commentaires -->

                    {% if user_manager.getUser() %}
                        <form method="post" id="myComment">
                            <div class="form-group">
                                <input type="hidden" value="{{ recipe.id_recipe }}" name="id_recipe">
                                <label>Votre commentaire :</label>
                                <textarea name="content" class="form-control" rows="10"></textarea>
                            </div>
                            <button name="contentBtn" value="contentBtn" type="submit"
                                    class="btn btn-primary form-control">Envoyer
                            </button>
                        </form>
                        <form method="post" id="myRate">
                            <input type="hidden" value="{{ recipe.id_recipe }}" name="id_recipe">
                            <div class="form-group">
                                <label>note de la recette</label>
                                <select name="rate" class="form-control">
                                    <option>Indiquez la note</option>
                                    <option value="0">0</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select>
                            </div>
                            <button name="rateBtn" value="rateBtn" type="submit" class="btn btn-primary form-control">
                                Envoyer
                            </button>
                        </form>
                    {% else %}
                        <p class="text-danger text-center">Vous devez être connecté pour commenter et noter une
                            recette</p>

                        <a class="btn btn-primary btn-block"
                           href="{{ path("user_login", {redirect: global.request.requestUri}) }}">Se connecter</a>
                    {% endif %}

                    <!-- Boucle pour afficher tout les commentaires-->
                    <div class="panel-body">
                        <div class="col-md-12" id="resultComments">
                            <hr>
                            {% for comment in comments %}
                                <p>
                                    Posté par : {{ comment.username }}, le {{ comment.comment_date|date('d/m/Y') }}
                                    à {{ comment.comment_date|date('H:i') }}
                                </p>
                                <p>Commentaire :{{ comment.content }}</p>
                                <hr>
                            {% else %}
                                <p>Aucun commentaire</p>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
