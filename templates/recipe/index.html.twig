        var postUrl = '{{ path('recipe_rating_ajax') }}';

        {#var postUrl2 = '{{ path('recipe_comment_ajax') }}';#}

        $('#myRate').submit(function (event) {
            event.preventDefault();
            var $this = $(this);

            var data = $this.serialize();
