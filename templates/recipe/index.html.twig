{% extends "layout.html.twig" %}

{% block content %}
    <div class="starter-template">
        <h1>{{ recipe.title }}</h1>
    </div>
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <img src="{{ asset('photo/' ~ recipe.picture_recipe) }}" class="img-responsive img-thumbnail" width="500px">
                </div>
                <div class="panel-body">
                    <div class="col-md-6">
                        <p>Temps de préparation: {{ recipe.prep_time }}</p>
                        <p>Temps de cuisson: {{ recipe.cook_time }}</p>
                        <p>Nombre de personnes: {{ recipe.portion }}</p>
                        <p>Difficulté: {{ recipe.difficulty }}</p>
                    </div>
                    <div class="col-md-6">
                        <p>Ingrédients de la recette: {{ recipe.ingredients }}</p>
                        <p>Etapes de la recette: {{ recipe.methods }}</p>
                    </div>
                    <div class="col-md-12">
                        <p>Anecdote: {{ recipe.story }}</p>
                    </div>
                    <div class="col-md-12">
                        <p>Auteur: <a href="{{ path('user_profil_public',{id_user:recipe.id_user})}}">{{ user.username }}</a></p>
                    </div>

                    <!-- Fromulaire du commentaires -->

                    <form method="post" >
                        <div class="form-group">
                            <label>Votre commentaire :</label>
                            <textarea name="commentaire" class="form-control" rows="10"></textarea>
                        </div>
                        <button name="envoi" type="submit" class="btn btn-primary form-control">Envoyer</button>
                    </form>

                    <!-- Boucle pour afficher tout les commentaires-->
                    <div class="panel-body">
                        <div class="col-md-12">
                            <hr>
                            {% for comment in comments %}
                                <p>Posté par :{{ comment.username }}</p>

                                <p>Commentaire :{{ comment.content }}</p>
                                <hr>
                            {% else %}
                                <p>Aucun commentaire</p>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}