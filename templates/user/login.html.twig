{% extends "layout.html.twig" %}

{% block title 'Inscription' %}

{% block content %}
    <div class="rw-container rw-section">
        <!-- Main content -->
        <div class="rw-row page-title">
            <h1>Connexion</h1>
        </div>
        <div class="rw-row">
            <div class="grid-container">
                <div class="grid desk-3"></div>
                <form method="post" enctype="multipart/form-data">
                    <div class="grid desk-6 both">
                        <label>Pseudo/Email</label>
                        <input type="text" name="login" value="{{ username }}" class="fullwidth form-control">
                        <label>Mot de passe</label>
                        <input type="password" name="password" class="fullwidth form-control">
                        <hr>
                        <button type="submit" class="button primary btn-block">Connexion</button>
                    </div>
                </form>
            </div> <!-- .rw-row -->
        </div>
    </div> <!-- .rw-container -->
{% endblock %}